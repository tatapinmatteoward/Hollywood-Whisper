---
const siteName = "Hollywood Whisper";
const navLinks = [
  { name: "Home", path: "/" },
  { name: "Stars", path: "/stars" },
  { name: "Red-Carpet", path: "/red-carpet" },
  { name: "Interviews", path: "/interviews" },
  { name: "Gossip", path: "/gossip" }
];
---

<script>
  let isMenuOpen = false;
</script>

<nav class="bg-[#4b001d] text-white shadow-lg">
  <div class="container mx-auto px-4 py-3">
    <div class="flex justify-between items-center">
      <a href="/" class="text-2xl font-bold tracking-wider hover:text-[#ff6f61] transition-colors duration-300">
        {siteName}
      </a>
      
      <!-- Desktop Navigation -->
      <div class="hidden md:flex gap-1">
        {navLinks.map((link) => (
          <a 
            href={link.path}
            class="px-4 py-2 text-sm font-medium hover:text-[#ff6f61] transition-colors duration-300 uppercase tracking-wide"
          >
            {link.name}
          </a>
        ))}
      </div>
      
      <!-- Mobile Menu Button -->
      <button 
        class="md:hidden text-white focus:outline-none"
        onClick={() => isMenuOpen = !isMenuOpen}
      >
        <i class="fas fa-bars text-2xl"></i>
      </button>
    </div>
    
    <!-- Mobile Navigation -->
    <div class={`md:hidden mt-3 py-3 border-t border-[#ff6f61] ${isMenuOpen ? 'block' : 'hidden'}`}>
      <div class="flex flex-col gap-2">
        {navLinks.map((link) => (
          <a 
            href={link.path}
            class="px-4 py-2 text-base font-medium hover:bg-[#ff6f61] hover:text-[#4b001d] transition-colors duration-300 uppercase tracking-wide"
            onClick={() => isMenuOpen = false}
          >
            {link.name}
          </a>
        ))}
      </div>
    </div>
  </div>
</nav>

<style>
  @import url('https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css');
  
  nav {
    background: linear-gradient(135deg, #4b001d 0%, #2c0010 100%);
  }
  
  a:hover {
    text-shadow: 0 0 8px rgba(255, 111, 97, 0.7);
  }
  
  .container {
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
  }
</style>